---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ProductListItem from "@/components/ProductListItem.astro";
import "@/styles/global.css";

import { defaultProducts } from "@/data/products.js";
import type { Product } from "@/types/product";

const API_URL = import.meta.env.PUBLIC_API_URL;

let products: Product[] = defaultProducts;

try {
  const res = await fetch(`${API_URL}/products`);
  if (res.ok) products = await res.json();
} catch {}

const categories = [ "Todos", ...new Set(products.map(p => p.category || "General")) ];
---

<Layout
  title="Productos"
  description="Explora nuestro catalogo de componentes electronicos por categoria."
>
  <Header slot="header" />

  <section class="catalog-controls">
    <div class="container">
      <div class="controls-wrapper">
        <div class="search-box">
          <span class="search-icon">üîç</span>
          <input
            type="text"
            id="product-search"
            placeholder="Buscar por nombre..."
            class="search-input"
          />
        </div>

        <div class="category-filters">
          {
            categories.map((cat) => (
              <button
                class="filter-btn"
                data-category={cat === "Todos" ? "all" : cat}
                class:list={[{ "is-active": cat === "Todos" }, "filter-btn"]}
              >
                {cat}
              </button>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section class="catalog" id="catalog">
    <div class="container" id="products-container">
      {
        categories
          .filter((c: string) => c !== "Todos")
          .map((category: string) => (
            <div class="category-section" data-cat-name={category}>
              <h2 class="category-title">{category}</h2>
              <div class="category-list">
                {products
                  .filter(
                    (p: Product) => (p.category || "General") === category,
                  )
                  .map((p: Product) => (
                    <ProductListItem
                      product={p}
                    />
                  ))}
              </div>
            </div>
          ))
      }

      {
        products.length === 0 && (
          <p class="catalog__empty">No se encontraron productos.</p>
        )
      }
    </div>
  </section>

  <Footer slot="footer" />
</Layout>

<script>
  import { addToCart } from "../scripts/cartStore.js";

  const searchInput = document.getElementById(
    "product-search",
  ) as HTMLInputElement;
  const filterBtns = document.querySelectorAll(".filter-btn");
  const productItems = document.querySelectorAll(".product-list-item");
  const categorySections = document.querySelectorAll(".category-section");

  function filterProducts() {
    const searchTerm = searchInput.value.toLowerCase();
    const activeCategory = document
      .querySelector(".filter-btn.is-active")
      ?.getAttribute("data-category");

    productItems.forEach((item) => {
      const name = item.getAttribute("data-name") || "";
      const category = item.getAttribute("data-category") || "General";

      const matchesSearch = name.includes(searchTerm);
      const matchesCategory =
        activeCategory === "all" || category === activeCategory;

      if (matchesSearch && matchesCategory) {
        (item as HTMLElement).style.display = "block";
      } else {
        (item as HTMLElement).style.display = "none";
      }
    });

    categorySections.forEach((section) => {
      const hasVisibleItems = Array.from(
        section.querySelectorAll(".product-list-item"),
      ).some((item) => (item as HTMLElement).style.display !== "none");
      (section as HTMLElement).style.display = hasVisibleItems
        ? "block"
        : "none";
    });
  }

  searchInput?.addEventListener("input", filterProducts);

  filterBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      filterBtns.forEach((b) => b.classList.remove("is-active"));
      btn.classList.add("is-active");
      filterProducts();
    });
  });

  function setupAddToCart() {
    document.querySelectorAll(".product-list-item__add-btn").forEach((btn) => {
      btn.addEventListener("click", () => {
        const button = btn as HTMLButtonElement;
        const product = JSON.parse(button.getAttribute("data-product") || "{}");
        addToCart(product);

        const original = button.textContent;
        button.classList.add("btn-success");
        button.style.pointerEvents = "none";
        setTimeout(() => {
          button.textContent = original;
          button.classList.remove("btn-success");
          button.style.pointerEvents = "";
        }, 1000);
      });
    });
  }

  setupAddToCart();
</script>

<style>
  .catalog-controls {
    background: var(--color-bg);
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: var(--header-height);
  }

  .controls-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .search-box {
    position: relative;
    max-width: 300px;
    width: 100%;
  }

  .search-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0.6;
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    height: 40px;
    padding: 0 16px 0 48px;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: 1rem;
    color: var(--color-text);
    transition: all var(--transition-base);
  }

  .search-input::placeholder {
    color: var(--color-text-muted);
  }

  .search-input:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 4px rgba(56, 189, 248, 0.1);
    outline: none;
  }

  .category-filters {
    display: flex;
    gap: var(--space-xs);
    overflow-x: auto;
    padding-bottom: var(--space-xs);
    scrollbar-width: none;
  }

  .category-filters::-webkit-scrollbar {
    display: none;
  }

  .filter-btn {
    padding: 6px 16px;
    border-radius: var(--radius-full);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    white-space: nowrap;
    transition: all var(--transition-fast);
    color: var(--color-text-muted);
  }

  .filter-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .filter-btn.is-active {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: #fff;
  }

  .catalog {
    padding: var(--space-2xl) 0 var(--space-2xl);
  }

  .category-section {
    margin-bottom: var(--space-2xl);
  }

  .category-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: var(--space-lg);
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .category-title::after {
    content: "";
    flex: 1;
    height: 1px;
    background: linear-gradient(to right, var(--color-border), transparent);
  }

  .category-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .catalog__empty {
    text-align: center;
    color: var(--color-text-muted);
    padding: var(--space-2xl);
  }

  @media (min-width: 768px) {
    .controls-wrapper {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }
</style>
