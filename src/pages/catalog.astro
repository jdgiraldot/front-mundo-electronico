---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ProductListItem from "@/components/ProductListItem.astro";
import ProductModal from "@/components/ProductModal.astro";
import "@/styles/global.css";

import { defaultProducts } from "@/data/products.js";
import type { Product } from "@/types/product";

const API_URL = import.meta.env.PUBLIC_API_URL;

let products: Product[] = defaultProducts;

try {
  const res = await fetch(`${API_URL}/products`);
  if (res.ok) products = await res.json();
} catch {}

const categories = [
  "Todos",
  ...new Set(products.map((p) => p.category || "General")),
];
---

<Layout
  title="Cat√°logo"
  description="Explora nuestro catalogo de componentes electronicos por categoria."
>
  <Header slot="header" />

  <section class="catalog-controls">
    <div class="container">
      <div class="controls-wrapper">
        <div class="category-filters">
          <div class="select-wrapper">
            <select id="category-filter" class="category-select">
              <option value="all">Todas las categor√≠as</option>
              {
                categories
                  .filter((c) => c !== "Todos")
                  .map((cat) => <option value={cat}>{cat}</option>)
              }
            </select>
            <span class="select-arrow">‚ñº</span>
          </div>
        </div>

        <div class="search-box">
          <span class="search-icon">üîç</span>
          <input
            type="text"
            id="product-search"
            placeholder="Buscar por nombre..."
            class="search-input"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="catalog" id="catalog">
    <div class="container" id="products-container">
      {
        categories
          .filter((c: string) => c !== "Todos")
          .map((category: string) => (
            <div class="category-section" data-cat-name={category}>
              <h2 class="category-title">{category}</h2>
              <div class="category-list">
                {products
                  .filter(
                    (p: Product) => (p.category || "General") === category,
                  )
                  .map((p: Product) => (
                    <ProductListItem product={p} />
                  ))}
              </div>
            </div>
          ))
      }

      {
        products.length === 0 && (
          <p class="catalog__empty">No se encontraron productos.</p>
        )
      }
    </div>
  </section>

  <ProductModal />
  <Footer slot="footer" />
</Layout>

<script>
  import { addToCart } from "../scripts/cartStore.js";

  const searchInput = document.getElementById(
    "product-search",
  ) as HTMLInputElement;
  const categoryFilter = document.getElementById(
    "category-filter",
  ) as HTMLSelectElement;
  const productItems = document.querySelectorAll(".product-list-item");
  const categorySections = document.querySelectorAll(".category-section");
  const modal = document.getElementById("product-modal") as HTMLDialogElement;

  function filterProducts() {
    const searchTerm = searchInput.value.toLowerCase();
    const activeCategory = categoryFilter.value;

    productItems.forEach((item) => {
      const name = item.getAttribute("data-name") || "";
      const category = item.getAttribute("data-category") || "General";

      const matchesSearch = name.includes(searchTerm);
      const matchesCategory =
        activeCategory === "all" || category === activeCategory;

      if (matchesSearch && matchesCategory) {
        (item as HTMLElement).style.display = "grid";
      } else {
        (item as HTMLElement).style.display = "none";
      }
    });

    categorySections.forEach((section) => {
      const hasVisibleItems = Array.from(
        section.querySelectorAll(".product-list-item"),
      ).some((item) => (item as HTMLElement).style.display !== "none");
      (section as HTMLElement).style.display = hasVisibleItems
        ? "block"
        : "none";
    });
  }

  searchInput?.addEventListener("input", filterProducts);
  categoryFilter?.addEventListener("change", filterProducts);

  function setupAddToCart() {
    document.querySelectorAll(".product-list-item__add-btn").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        e.stopPropagation(); // Prevent opening modal
        const button = btn as HTMLButtonElement;
        const product = JSON.parse(button.getAttribute("data-product") || "{}");
        addToCart(product);

        const original = button.textContent;
        button.classList.add("btn-success");
        button.style.pointerEvents = "none";
        setTimeout(() => {
          button.textContent = original;
          button.classList.remove("btn-success");
          button.style.pointerEvents = "";
        }, 1000);
      });
    });
  }

  setupAddToCart();

  // Modal Logic
  const modalCloseBtn = document.getElementById("close-modal");
  const modalAddBtn = document.getElementById(
    "modal-add-to-cart",
  ) as HTMLButtonElement;
  let currentProduct: any = null;

  function openModal(product: any) {
    if (!modal) return;
    currentProduct = product;

    // Populate Modal
    (document.getElementById("modal-image") as HTMLImageElement).src =
      product.imageUrl || "/placeholder.svg";
    (document.getElementById("modal-category") as HTMLElement).textContent =
      product.category || "General";
    (document.getElementById("modal-name") as HTMLElement).textContent =
      product.name;
    (document.getElementById("modal-description") as HTMLElement).textContent =
      product.sku || ""; // Using SKU as description for now

    const formattedPrice = new Intl.NumberFormat("es-CO", {
      style: "currency",
      currency: "COP",
      minimumFractionDigits: 0,
    }).format(product.price);

    (document.getElementById("modal-price") as HTMLElement).textContent =
      formattedPrice;

    const stockEl = document.getElementById("modal-stock") as HTMLElement;
    const inStock = product.stock > 0;
    stockEl.textContent = inStock ? `${product.stock} en stock` : "Agotado";
    stockEl.className = `product-modal__stock ${inStock ? "in-stock" : "out-stock"}`;

    modalAddBtn.disabled = !inStock;
    modalAddBtn.textContent = inStock
      ? "Agregar al Carrito"
      : "Sin stock disponible";

    modal.showModal();
  }

  modalCloseBtn?.addEventListener("click", () => {
    modal.close();
  });

  modal.addEventListener("click", (e) => {
    if (e.target === modal) modal.close();
  });

  // Attach click to items
  productItems.forEach((item) => {
    item.addEventListener("click", () => {
      const productJson = item.getAttribute("data-json");
      if (productJson) {
        openModal(JSON.parse(productJson));
      }
    });
  });

  // Modal Add to Cart
  modalAddBtn?.addEventListener("click", () => {
    if (currentProduct) {
      addToCart(currentProduct);
      const originalText = modalAddBtn.textContent;
      modalAddBtn.textContent = "‚úì Agregado";
      modalAddBtn.classList.add("btn-success");
      modalAddBtn.disabled = true;

      setTimeout(() => {
        modal.close();
        // Reset button state after closing
        setTimeout(() => {
          modalAddBtn.textContent = originalText;
          modalAddBtn.classList.remove("btn-success");
          modalAddBtn.disabled = false;
        }, 200);
      }, 700);
    }
  });
</script>

<style>
  .catalog-controls {
    background: var(--color-bg);
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: var(--header-height);
    z-index: 10;
  }

  .controls-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  /* Search */
  .search-box {
    position: relative;
    width: 100%;
  }

  .search-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0.6;
    pointer-events: none;
    font-size: 0.9rem;
  }

  .search-input {
    width: 100%;
    height: 42px;
    padding: 0 16px 0 42px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: 0.95rem;
    color: var(--color-text);
    transition: all var(--transition-base);
  }

  .search-input::placeholder {
    color: var(--color-text-muted);
  }

  .search-input:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(56, 189, 248, 0.1);
    outline: none;
    background: var(--color-bg);
  }

  /* Dropdown Filter */
  .category-filters {
    width: 100%;
  }

  .select-wrapper {
    position: relative;
    width: 100%;
  }

  .category-select {
    width: 100%;
    height: 42px;
    padding: 0 40px 0 16px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: 0.95rem;
    color: var(--color-text);
    appearance: none;
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .category-select:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(56, 189, 248, 0.1);
    outline: none;
  }

  .select-arrow {
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.7rem;
    color: var(--color-text-muted);
    pointer-events: none;
  }

  .catalog {
    padding: var(--space-2xl) 0 var(--space-2xl);
  }

  .category-section {
    margin-bottom: var(--space-2xl);
  }

  .category-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: var(--space-lg);
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .category-title::after {
    content: "";
    flex: 1;
    height: 1px;
    background: linear-gradient(to right, var(--color-border), transparent);
  }

  .category-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .catalog__empty {
    text-align: center;
    color: var(--color-text-muted);
    padding: var(--space-2xl);
  }

  @media (min-width: 768px) {
    .controls-wrapper {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }
</style>
