---
const year = new Date().getFullYear();
---

<footer class="footer">
    <div class="footer-inner container">
        <p class="footer-text">
            © {year}
            <strong>Mundo Electrónico</strong> — Componentes electrónicos de calidad.
        </p>
    </div>
</footer>

<style>
    .footer {
        border-top: 1px solid var(--color-border);
        padding: var(--space-xl) 0;
        margin-top: auto;
    }

    .footer-inner {
        text-align: center;
    }

    .footer-text {
        font-size: 0.9rem;
        color: var(--color-text-muted);
    }

    .footer-text strong {
        color: var(--color-primary);
        font-weight: 600;
    }
</style>
