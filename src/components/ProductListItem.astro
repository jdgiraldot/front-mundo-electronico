---
import type { Product } from "@/types/product";
interface Props { product: Product; }

const { product } = Astro.props;
const formattedPrice = new Intl.NumberFormat("es-CO", { style: "currency", currency: "COP", minimumFractionDigits: 0, }).format(product.price);
const inStock = product.stock > 0;
---

<div class="product-list-item"
    data-product-id={product.id}
    data-category={product.category}
    data-name={product.name.toLowerCase()}
>
    <div class="product-list-item__name">
        <a href={`/product/${product.id}`}>{product.name}</a>
    </div>
    
    <div class="product-list-item__sku">
        {product.sku}
    </div>
    
    <div class="product-list-item__price">
        {formattedPrice}
    </div>

    <div class="product-list-item__action">
        <button
            class="product-list-item__add-btn"
                data-product={JSON.stringify({
                    id: product.id,
                    name: product.name,
                    price: product.price,
                    imageUrl: product.imageUrl,
                })}
                disabled={!inStock}
                title={inStock ? "Agregar al carrito" : "Sin existencias"}
            >+
        </button>
    </div>
</div>

<style>
    .product-list-item {
        display: grid;
        grid-template-columns: 1fr auto auto 40px;
        gap: var(--space-sm);
        align-items: center;
        padding: var(--space-sm) var(--space-md);
        background: var(--color-surface);
        border-bottom: 1px solid var(--color-border);
        transition: background-color var(--transition-base);
    }

    .product-list-item:hover {
        background: var(--color-bg);
    }

    .product-list-item__name {
        font-size: 0.9rem;
        font-weight: 500;
        color: var(--color-text);
    }

    .product-list-item__name a {
        color: var(--color-text);
        text-decoration: none;
        transition: color var(--transition-base);
    }

    .product-list-item__name a:hover {
        color: var(--color-primary);
    }

    .product-list-item__sku {
        font-size: 0.8rem;
        color: var(--color-text-muted);
        font-family: monospace;
        min-width: 80px;
        text-align: right;
    }

    .product-list-item__price {
        font-size: 0.95rem;
        font-weight: 700;
        color: var(--color-text);
        min-width: 100px;
        text-align: right;
    }

    .product-list-item__action {
        display: flex;
        justify-content: flex-end;
    }

    .product-list-item__add-btn {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        border: 2px solid var(--color-primary);
        background: var(--color-primary);
        color: white;
        font-size: 1.25rem;
        font-weight: 300;
        cursor: pointer;
        transition: all var(--transition-base);
        display: flex;
        align-items: center;
        justify-content: center;
        line-height: 1;
        padding: 0;
    }

    .product-list-item__add-btn:hover:not(:disabled) {
        background: var(--color-primary-dark, #0056b3);
        border-color: var(--color-primary-dark, #0056b3);
        transform: scale(1.05);
    }

    .product-list-item__add-btn:active:not(:disabled) {
        transform: scale(0.95);
    }

    .product-list-item__add-btn:disabled {
        background: var(--color-border);
        border-color: var(--color-border);
        color: var(--color-text-muted);
        cursor: not-allowed;
        opacity: 0.5;
    }

    @media (max-width: 768px) {
        .product-list-item {
            grid-template-columns: 1fr auto auto 40px;
            gap: var(--space-xs);
            padding: var(--space-sm) var(--space-md);
            font-size: 0.85rem;
        }

        .product-list-item__name {
            font-size: 0.85rem;
        }

        .product-list-item__sku {
            min-width: 60px;
            font-size: 0.75rem;
        }

        .product-list-item__price {
            min-width: 80px;
            font-size: 0.85rem;
        }

        .product-list-item__add-btn {
            width: 36px;
            height: 36px;
            font-size: 1.25rem;
        }
    }
</style>