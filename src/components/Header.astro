---
import { formatUrl } from "@/utils/url.js";

const currentPath = Astro.url.pathname;
const homeUrl = formatUrl("/");
const catalogUrl = formatUrl("/catalog");
const cartUrl = formatUrl("/cart");
---

<header class="header">
    <div class="header-inner container">
        <a href={homeUrl} class="logo" id="logo">
            <span class="logo-icon">ü™ê</span>
            <span class="logo-text">Mundo<span class="logo-accent">Electr√≥nico</span></span>
        </a>

        <nav class="nav" id="main-nav">
            <a
                href={homeUrl}
                class:list={["nav-link", { active: currentPath.startsWith(homeUrl) }]}
                >Inicio</a>
            <a
                href={catalogUrl}
                class:list={["nav-link", { active: currentPath.startsWith(catalogUrl) }]}
                >Cat√°logo</a>
            <a
                href={cartUrl}
                class:list={["nav-link", { active: currentPath.startsWith(cartUrl) }]}
                id="nav-cart-link"
                >Carrito<span
                    class="badge cart-count"
                    id="header-cart-count"
                    style="display:none;">0</span></a>
        </nav>
    </div>
</header>

<!-- Mobile Navigation (Bottom Bar) -->
<nav class="mobile-nav">
    <a
        href={homeUrl}
        class:list={["mobile-nav-link", { active: currentPath.startsWith(homeUrl) }]}
    >
        <span class="nav-icon">üè†</span>
        <span>Inicio</span>
    </a>
    <a
        href={catalogUrl}
        class:list={["mobile-nav-link", { active: currentPath.startsWith(catalogUrl) }]}
    >
        <span class="nav-icon">üì¶</span>
        <span>Cat√°logo</span>
    </a>
    <a
        href={cartUrl}
        class:list={["mobile-nav-link", { active: currentPath.startsWith(cartUrl) }]}
    >
        <span class="nav-icon">üõí</span>
        <span>Carrito</span>
        <span
            class="badge cart-count"
            id="mobile-cart-count"
            style="display:none;">0</span
        >
    </a>
</nav>

<script>
    import { getCartCount } from "../scripts/cartStore.js";

    function updateCartBadge() {
        const count = getCartCount();
        const badge = document.getElementById("header-cart-count");
        const mobileBadge = document.getElementById("mobile-cart-count");

        const countStr = count.toString();
        const displayStyle = count > 0 ? "inline-flex" : "none";

        if (badge) {
            badge.textContent = countStr;
            badge.style.display = displayStyle;
        }

        if (mobileBadge) {
            mobileBadge.textContent = countStr;
            mobileBadge.style.display = displayStyle;
        }
    }

    updateCartBadge();
    window.addEventListener("cart-updated", updateCartBadge);
</script>

<style>
    .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: var(--header-height);
        background: var(--color-bg);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border-bottom: 1px solid var(--color-border);
        z-index: 100;
    }

    .header-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100%;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        text-decoration: none;
        color: var(--color-text);
        font-weight: 700;
        font-size: 1.15rem;
    }

    .logo-icon {
        font-size: 1.4rem;
    }

    .logo-accent {
        color: var(--color-primary);
    }

    .nav {
        display: flex;
        align-items: center;
        gap: var(--space-lg);
    }

    .nav-link {
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: var(--space-xs);
        padding: var(--space-sm) 0;
        color: var(--color-text-muted);
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        transition: color var(--transition-fast);
    }

    .nav-link:hover,
    .nav-link.active {
        color: var(--color-primary);
    }

    .nav-link.active::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        right: 0;
        height: 2px;
        background: var(--color-primary);
        border-radius: 1px;
    }

    .cart-count {
        position: relative;
        top: -1px;
    }
    /* Mobile Navigation */
    .mobile-nav {
        display: none; /* Hidden by default (desktop) */
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: var(--color-surface);
        border-top: 1px solid var(--color-border);
        padding: var(--space-xs) var(--space-md);
        z-index: 100;
        justify-content: space-around;
        align-items: center;
        height: 60px;
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.2);
    }

    .mobile-nav-link {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        color: var(--color-text-muted);
        text-decoration: none;
        font-size: 0.75rem;
        font-weight: 500;
        padding: var(--space-xs);
        border-radius: var(--radius-sm);
        transition: color var(--transition-fast);
    }

    .mobile-nav-link.active,
    .mobile-nav-link:hover {
        color: var(--color-primary);
    }

    .nav-icon {
        font-size: 1.2rem;
    }

    /* Cart Badge for Mobile */
    .mobile-nav-link .cart-count {
        position: absolute;
        top: 4px;
        right: 25%;
        font-size: 0.65rem;
        min-width: 16px;
        height: 16px;
        padding: 0 4px;
    }

    /* Responsive Logic */
    @media (max-width: 768px) {
        .nav {
            display: none; /* Hide desktop nav */
        }

        .mobile-nav {
            display: flex; /* Show mobile nav */
        }

        /* Adjust body padding if needed to prevent content being hidden behind bottom bar */
        :global(body) {
            padding-bottom: 60px;
        }
    }
</style>
